<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="TextTitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/auto_title_font</item>
    </style>

    <style name="TextOverviewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/auto_overview_font</item>
    </style>
    <style name="TextDetailsTitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/DetailsTitleTextAppearance</item>
    </style>
    <style name="TextDetailsStyle" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/DetailsTextAppearance</item>
    </style>

    <style name="DetailsTitleTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/auto_details_title_font</item>
    </style>
    <style name="DetailsTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/auto_details_font</item>
    </style>

</resources>
